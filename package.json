{
  "name": "typescript-koa-boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate for TypeScript KOA projects",
  "author": "<dev@bitzr.nl>",
  "repository": "https://github.com/bitzr01/typescript-koa-boilerplate",
  "keywords": [
    "typescript",
    "boilerplate",
    "koa"
  ],
  "engines" : {
    "node": "~14.0.0",
    "npm": ">=8.3.1"
  },
  "main": "./dist/tsc/index.js",
  "types": "./dist/tsc/index.d.ts",
  "scripts": {
    "dev": "tsc-watch --onSuccess 'node --inspect=0.0.0.0:5858 ./dist/tsc/index.js' | pino-pretty -t 'SYS:HH:MM:ss' -i hostname",
    "lint": "eslint src/ --fix --ext .js,.jsx,.ts,.tsx",
    "clean": "rm -rf dist docs coverage",
    "build": "tsc",
    "start": "node ./dist/tsc/index.js",
    "test": "mocha",
    "coverage": "nyc mocha"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/async": "^3.2.12",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/ip": "^1.1.0",
    "@types/koa": "^2.13.4",
    "@types/koa__cors": "^3.1.1",
    "@types/koa-bodyparser": "^4.3.5",
    "@types/koa-helmet": "^6.0.4",
    "@types/koa-router": "^7.4.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.10",
    "@types/pino": "^7.0.5",
    "@types/sinon": "^10.0.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.24.2",
    "mocha": "^9.1.1",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^10.2.1",
    "tsc-watch": "^4.5.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.1.1",
    "async": "^3.2.3",
    "ip": "^1.1.5",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-requestid": "^2.1.0",
    "koa-router": "^10.1.1",
    "moment": "^2.29.1",
    "pino": "^7.6.3",
    "pino-pretty": "^7.3.0",
    "sinon": "^12.0.1",
    "supertest": "^6.2.1"
  }
}
