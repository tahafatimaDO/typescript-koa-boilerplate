{
  "name": "typescript-boilerplate",
  "version": "0.0.2",
  "description": "Boilerplate for TypeScript projects",
  "author": "<dev@bitzr.nl>",
  "repository": "https://github.com/bitzr01/typescript-boilerplate",
  "keywords": [
    "typescript",
    "boilerplate"
  ],
  "main": "./dist/tsc/main.js",
  "types": "./dist/tsc/main.d.ts",
  "scripts": {
    "dev": "tsc-watch --onSuccess 'node --inspect=0.0.0.0:5858 dist/tsc/main.js' | pino-pretty -t 'SYS:HH:MM:ss' -i hostname",
    "lint": "eslint src/ --fix --ext .js,.jsx,.ts,.tsx",
    "clean": "rm -rf dist docs coverage",
    "docs": "typedoc --out docs src/main.ts",
    "build": "tsc -p tsconfig.json",
    "test": "mocha",
    "coverage": "nyc mocha"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.10",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.24.2",
    "mocha": "^9.1.1",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^10.2.1",
    "tsc-watch": "^4.5.0",
    "typedoc": "^0.21.9",
    "typescript": "^4.2.4"
  },
  "dependencies": {
  }
}